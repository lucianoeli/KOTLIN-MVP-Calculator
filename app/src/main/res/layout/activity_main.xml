<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
            android:id="@+id/resultLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_main_activity_result_label_value"
            android:textSize="20sp"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_main_activity_delete_btn_label"
                android:textSize="@dimen/main_activity_number"

        />
        <Button
                android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_main_activity_reset_btn_label"
                android:textSize="@dimen/main_activity_number"

                android:layout_toRightOf="@id/deleteButton"
        />
        <Button
                android:id="@+id/oneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/main_activity_number"

                android:layout_below="@id/fourButton"
        />

        <Button
                android:id="@+id/twoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/main_activity_number"

                android:layout_below="@id/fiveButton"
                android:layout_toEndOf="@id/oneButton"

        />

        <Button
                android:id="@+id/threeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="@dimen/main_activity_number"

                android:layout_below="@id/sixButton"
                android:layout_toEndOf="@id/twoButton"
        />

        <Button
                android:id="@+id/fourButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="@dimen/main_activity_number"

                android:layout_below="@id/sevenButton"

        />

        <Button
                android:id="@+id/fiveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/main_activity_number"

                android:layout_below="@+id/eightButton"
                android:layout_toEndOf="@id/fourButton"

        />

        <Button
                android:id="@+id/sixButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="@dimen/main_activity_number"

                android:layout_below="@+id/nineButton"
                android:layout_toEndOf="@id/fiveButton"
        />

        <Button
                android:id="@+id/sevenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="@dimen/main_activity_number"

                android:layout_below="@id/deleteButton"

        />

        <Button
                android:id="@+id/eightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="@dimen/main_activity_number"

                android:layout_toEndOf="@+id/sevenButton"
                android:layout_below="@id/resetButton"
        />

        <Button
                android:id="@+id/nineButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="@dimen/main_activity_number"

                android:layout_toEndOf="@id/eightButton"
                android:layout_below="@id/resetButton"
        />

        <Button
                android:id="@+id/divideButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="@dimen/main_activity_number"

                android:layout_toEndOf="@id/nineButton"
                android:layout_below="@id/resetButton"
        />

        <Button
                android:id="@+id/multiplyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="@dimen/main_activity_number"

                android:layout_toEndOf="@id/sixButton"
                android:layout_below="@id/divideButton"
        />

        <Button
                android:id="@+id/minusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="@dimen/main_activity_number"

                android:layout_toEndOf="@id/threeButton"
                android:layout_below="@id/multiplyButton"
        />

        <Button
                android:id="@+id/plusButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="@dimen/main_activity_number"

                android:layout_toEndOf="@id/resultButton"
                android:layout_below="@+id/minusButton"
        />

        <Button
                android:id="@+id/resultButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="@dimen/main_activity_number"

                android:layout_toEndOf="@id/zeroButton"
                android:layout_below="@id/threeButton"

                style="@style/Widget.AppCompat.Button.Colored"
        />

        <Button
                android:id="@+id/zeroButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/main_activity_number"
                android:layout_toEndOf="@id/dotButton"
                android:layout_below="@id/twoButton"
        />

        <Button
                android:id="@+id/dotButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="@dimen/main_activity_number"

                android:layout_below="@id/oneButton"
        />


    </RelativeLayout>

</LinearLayout>
